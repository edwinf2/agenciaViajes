extends ./layout/index
block contenido
    main.container.mt-5 
        h1.text-center.mt-5 #{pagina}

        //- p= JSON.stringify(testimoniales)
        blockquote.text-center Lee sobre nuestros clientes y sus experiencias
        include ./layout/bloque_testimoniales.pug


        .row 
            .col-md-12
                h2.d-block.w-100.text-center Agregar un Testimonial
                //- p= JSON.stringify(errores)
                if(errores)
                    each error in errores
                        .alert.col.alert-danger.text-center= error.mensaje

            .row.justify-content-center.col 
                .col-md-8 
                    form(action="/testimoniales", method="post")
                        .form-group 
                            label(for="nombre") Nombre
                            input#nombre(type="text", placeholder="Tu Nombre", name="nombre", class="form-control", value=nombre)
                        .form-group 
                            label(for="email") Email
                            input#nombre(type="email", placeholder="Tu Email", name="email", class="form-control", value=email)
                        .form-group 
                            label(for="mensaje") Mensaje
                            textarea#mensaje(name="mensaje", cols="20", rows="3", class="form-control", placeholder="Tu Mensaje")= mensaje
                        
                        input.btn.btn-success.btn-block(type="submit" )